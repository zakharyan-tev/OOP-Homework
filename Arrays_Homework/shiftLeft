#include <iostream>
#include <array>

template <typename T, size_t N>
void shiftLeft(std::array<T, N>& arr, size_t positions) {
    positions %= N;

    for (size_t i = 0; i < positions; ++i) {
        T first = arr[0]; 
        for (size_t j = 0; j < N - 1; ++j) {
            arr[j] = arr[j + 1];
        }
        arr[N - 1] = first;
    }
}

int main() {
    std::array<int, 5> arr = {1, 2, 3, 4, 5};

    shiftLeft<int, 5>(arr, 2);

    for (size_t i = 0; i < arr.size(); ++i) {
        std::cout << arr[i] << " ";
    }
    std::cout << std::endl;

    return 0;
}
